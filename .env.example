# Example .env file for hoi-InsolvencyBot
# Copy this file to .env and fill in your API keys and configuration

# Required: OpenAI API key for all functionality
OPENAI_API_KEY=your-openai-api-key-here

# Optional: API key for InsolvencyBot API authentication (recommended for production)
# If set, all API requests will require this key in the header: api-key: your-key-here
INSOLVENCYBOT_API_KEY=

# Optional: Port configuration (defaults shown)
PORT=8000                # API server port
FLASK_PORT=5000          # Web interface port
HOST=0.0.0.0             # API server host (0.0.0.0 listens on all interfaces)
WORKERS=1                # Number of API server workers

# Optional: Model configuration
DEFAULT_MODEL=gpt-3.5-turbo  # Default model to use if none specified
MAX_RETRIES=3            # Maximum number of retries for API calls

# Optional: Application settings
DEBUG=false              # Enable debug mode (true/false)

# Optional: Logging configuration
LOG_LEVEL=INFO           # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
